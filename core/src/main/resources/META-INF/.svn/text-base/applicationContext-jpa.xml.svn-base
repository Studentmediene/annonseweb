<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="byName">

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.driver}"/>
        <property name="url" value="${datasource.url}"/>
        <property name="username" value="${datasource.username}"/>
        <property name="password" value="${datasource.password}"/>
    </bean>

    <bean id="jpaDialect" class="org.springframework.orm.jpa.vendor.TopLinkJpaDialect"/>

    <bean id="openEntityManagerInView" class="org.springframework.orm.jpa.support.OpenEntityManagerInViewInterceptor"/>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager"/>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.TopLinkJpaVendorAdapter">
                <property name="database" value="${datasource.databasetype}"/>
                <property name="showSql" value="false"/>
                <property name="generateDdl" value="true"/>
            </bean>
        </property>
        <property name="jpaPropertyMap">
            <map>
                <entry key="toplink.weaving" value="false"/>
                <entry key="toplink.logging.timestamp" value="false"/>
                <entry key="toplink.logging.thread" value="false"/>
                <entry key="toplink.logging.session" value="false"/>
                <entry key="toplink.throw.orm.exceptions" value="true"/>
                <entry key="toplink.cache.shared.default" value="false"/>
            </map>
        </property>
    </bean>

    <bean id="persistenceUnitManager" class="no.dusken.common.plugin.spring.CustomPersistenceUnitManager">
        <property name="persistenceXmlLocations">
            <list>
                <value>classpath*:META-INF/persistence.xml</value>
            </list>
        </property>
        <property name="defaultDataSource" ref="dataSource"/>
        <property name="persistenceUnitName" value="barPU" />
    </bean>
</beans>
