<!-- the sidebar -->
#parse('no/dusken/annonseweb/web/sale/sidebar.vm')

<!-- content -->
<div id="content">
    <div class="post">
        <h2 class="title">
            <a href="/annonse/sale/all">Salgsliste</a>
        </h2>
        <div class="entry">
            #foreach( $sale in $salesList)
                <div class="listEntry">
                    <p class="meta">
                        $sale.meta
                    </p>
                    <p class="info">
                        $sale.info
                    </p>
                </div>
            #end
        </div>
    </div>
</div>
