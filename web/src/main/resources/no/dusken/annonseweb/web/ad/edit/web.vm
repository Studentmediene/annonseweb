<script type='text/javascript'>
    $(window).load(function(){
        var myArray = new Array();
        #foreach($price in $ad.priceByWebFormat)
            myArray.push($price)
        #end
        $('input[id="webFormat"]').on('change', function() {
            for(i = 1; i <= 3; i++) {
                if($(this).val() == i){
                    $('input[id="price"]').val(myArray[i-1]);
                }
            }
        });
    });
</script>