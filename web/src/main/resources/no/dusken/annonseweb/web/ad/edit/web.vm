<!-- the sidebar -->
#parse('no/dusken/annonseweb/web/ad/sidebar.vm')

<!-- content -->
<div id="content" class="post">

    <h2 class="title">
    #set($adId = false)
    #set($adId = $ad.getId())
    #set($pathEnd = "")
    #if (!$adId)
        <a href="/annonse/ad/new/web">Ny annonse for Dusken.no:</a>
    #else
        <a href="/annonse/ad/edit/$ad.getId()">Endre annonse for Dusken.no: $ad.getId()</a>
    <label class="edit"><a href="/annonse/ad/$ad.getId()">Tilbake</a>
        #set($pathEnd = "/" + $adId)
    #end
</h2>
<form name="ad" id="ad" class="content"  method="post" action="#springUrl("/annonse/ad/save/web$pathEnd")">
    <div class="content">
        <ul>
            <li>
                <label class="description" for="sale">Salg</label>
                <div>
                    #singleSelectSale("ad.sale" $salesList $ad.sale '')
                    #springShowErrors("<br>" "error") <br/>
                </div>
                <p class="guidelines">
                    Velg salget som annonsen skal kobles mot.
                </p>
            </li>
            <li>
                <label class="description" for="webFormat">Annonseformat</label>
                <div>
                    #springFormRadioButtons( "ad.webFormat" $ad.webFormatList "<br>" '')
                        #springShowErrors("<br>" "error")
                </div>
                <p class="guidelines">
                    Adressen til firmaet, dette er hovedadressen eller besøksadressen.
                </p>
            </li>
            <li>
                <label class="description" for="price">Pris</label>
                <div>
                    #springFormInput( "ad.price" 'size="30"')
                    #springShowErrors("<br>" "error") <br/>
                </div>
                <p class="guidelines">
                    Pris for annonsen.
                </p>
            </li>
            <li>
                <label class="description" for="discount">Rabatt</label>
                <div>
                    #springFormInput( "ad.discount" 'size="30"')
                    #springShowErrors("<br>" "error") <br/>
                </div>
                <p class="guidelines">
                    Rabatt i prosent.
                </p>
            </li>
