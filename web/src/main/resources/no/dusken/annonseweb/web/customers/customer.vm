<!-- the sidebar -->
#parse('no/dusken/annonseweb/web/customers/sidebar.vm')

<!-- content -->
<div id="content" class="post">

    <h2 class="title">
        <a href="/annonse/customers/customer/$customer.Id">$customer.customerName - $customer.Id</a>
        <label class="edit"><a href="/annonse/customers/edit/$customer.Id">Edit Customer</a></label>
    </h2>
    <div class="content">
        <div class="content_description">
            <p>The stored information about this customer</p>
        </div>
        <ul>
            <li>
                <label class="description">Customer ID</label>
                <div>
                    <label class="element text medium">$customer.Id</label>
                </div>
                <p class="guidelines">
                    Automatically generated Id number for this customer.
                </p>
            </li>
            <li>
                <label class="description">Customer name</label>
                <div>
                    <label class="element text medium">$customer.customerName</label>
                </div>
                <p class="guidelines">
                    This is the name of the customer. eg: "Samfundet"
                </p>
            </li>
            <li>
                <label class="description">Customer Email</label>
                <div>
                    <label class="element text medium">$customer.centralEmail</label>
                </div>
                <p class="guidelines">
                    This is typically post@ or ud@ as we have. The contact person might have another email address that will be used for contact about sales.
                </p>
            </li>
            <li>
                <label class="description">Homepage</label>
                <div>
                    <label class="element text medium">
                        <a href="$customer.homepage">$customer.homepage</a>
                    </label>
                </div>
                <p class="guidelines">
                    The homepage of the customer. e.g: www.samfundet.no
                </p>
            </li>
            <li>
                <label class="description">Phone</label>
                <div>
                    <label class="element text medium">$customer.centralTlf</label>
                </div>
                <p class="guidelines">
                    The central phone number of this customer. This is not the direct number to the contact person.
                </p>
            </li>
            <li>
                <label class="description">Customer Address</label>
                <div>
                    <label class="element text medium">$customer.subscriberAddress</label>
                </div>
                <p class="guidelines">
                    The address to the customer. This is the visiting address or main office address. NOT necessarily where the invoice is sent.
                </p>
            </li>
            <li>
                <label class="description">Invoice address</label>
                <div>
                    <label class="element text medium">$customer.invoiceAddress</label>
                </div>
                <p class="guidelines">
                    The address the invoice is sent to.
                </p>
            </li>
            <li>
                <label class="description">Discount (%)</label>
                <div>
                    <label class="element text medium">$customer.discount</label>
                </div>
                <p class="guidelines">
                    The discount the customer gets from us. The number is a percentage of the sum. e.g: 25%, then a sale of 10.000 will generate an invoice with 7.500 to be paid.
                </p>
            </li>
            <li>
                <label class="description">Contact Person</label>
                <div>
                    <label class="element text medium">
                        <a href="link til kontaktperson">$customer.contactPerson</a>
                    </label>
                </div>
                <p class="guidelines">
                    The person that is normally contacted at with this customer.
                </p>
            </li>
            <li>
                <label class="description">Contact notes (Last two) - <a href="/annonse/contacts/contactNote/new/$customer.Id">New Note</a> </label>
                <div>
                    #foreach( $note in $customer.contactNotes)
                        <lable class="element text medium">$note</lable>
                        <!-- It should be possible to delete notes also. -->
                    #end
                </div>
                <p class="guidelines">
                    The last two notes that has been made with this customer. This is to keep track of contact with the customer and easily see what kind of interaction happend last.
                </p>
            </li>
            <li>
                <label class="description">
                    Two last sales -
                    <a href="/annonse/sales/new/$customer.Id">
                        Register new sale for this customer
                    </a>
                </label>
                <div>
                    #foreach( $sale in $customer.sales )
                        <lable class="element text medium">$sale</lable>
                    #end
                </div>
                <p class="guidelines">
                    The two latest sales made to this customer
                </p>
            </li>
            <li>
                <label class="description">Tags </label>
                <div>
                    <label class="element text medium">$customer.industryTags</label>
                </div>
                <p class="guidelines">
                    Tags to better describe this customer.
                </p>
            </li>
            <li>
                <label class="description">Created (user - when)</label>
                <div>
                    <label class="element text medium">$customer.createdUser - $customer.createdDate</label>
                </div>
                <p class="guidelines">
                    The user that created this customer and when the custoemr was created.
                </p>
            </li>
            <li>
                <label class="description">Last changed (user - when) </label>
                <div>
                    <label class="element text medium">$customer.lastEditedUser - $customer.lastEditedDate</label>
                </div>
                <p class="guidelines">
                    When the customer was last changed and the user that did the change.
                </p>
            </li>
        </ul>
    </div>
</div>

