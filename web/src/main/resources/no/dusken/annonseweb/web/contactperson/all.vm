<!-- the sidebar -->
#parse('no/dusken/annonseweb/web/contactperson/sidebar.vm')

<!-- content -->
<div id="content">
    <div class="post">
        <h2 class="title"><a href="/annonseweb/contactperson/all">KontaktPersonListe</a></h2>
        <div class="entry">
            <!-- should be boxed as sale and invoice to display the most relevant information. -->
            #foreach($contact in $!contactPersonList)
                <div class="listEntry">
                    <p  class="meta">
                        <a href="/annonseweb/customer/$contact.customer.id">$contact.customer.name</a>
                    </p>
                    <p class="info">
                        <a href="/annonseweb/contactperson/$contact.Id">$contact.Id - $contact.PersonName</a>
                    </p>
                </div>
            #end
        </div>
    </div>
</div>


